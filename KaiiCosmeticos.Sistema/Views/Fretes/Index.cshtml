@model IEnumerable<KaiiCosmeticos.Sistema.Models.Frete>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transportadora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transportadora.IdTransportadora)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdFrete">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdFrete">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdFrete">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
